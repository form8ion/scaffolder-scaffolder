{
  "name": "@form8ion/scaffolder-scaffolder",
  "description": "opinionated scaffolder for scaffolding scaffolder plugins",
  "license": "MIT",
  "version": "0.0.0-semantically-released",
  "files": [
    "example.js",
    "lib/",
    "templates/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "runkitExampleFilename": "./example.js",
  "main": "lib/index.cjs.js",
  "module": "lib/index.es.js",
  "sideEffects": false,
  "repository": "form8ion/scaffolder-scaffolder",
  "bugs": "https://github.com/form8ion/scaffolder-scaffolder/issues",
  "homepage": "https://npm.im/@form8ion/scaffolder-scaffolder",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "test": "npm-run-all --print-label build --parallel lint:* --parallel test:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:js": "eslint . --cache",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "pregenerate:md": "npm run build",
    "lint:sensitive": "ban",
    "clean": "rimraf ./lib",
    "prebuild": "run-s clean",
    "build": "npm-run-all --print-label --parallel build:*",
    "build:js": "rollup --config",
    "watch": "run-s 'build:js -- --watch'",
    "prepack": "run-s build",
    "test:unit": "nyc run-s test:unit:base",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "test:unit:base": "DEBUG=any mocha 'src/**/*-test.js'",
    "lint:peer": "npm ls >/dev/null",
    "lint:gherkin": "gherkin-lint",
    "pretest:integration": "preview",
    "test:integration": "run-s 'test:integration:base -- --profile noWip'",
    "test:integration:base": "DEBUG=any cucumber-js test/integration --profile base",
    "test:integration:debug": "DEBUG=test run-s test:integration",
    "test:integration:wip": "run-s 'test:integration:base -- --profile wip'",
    "test:integration:focus": "run-s 'test:integration:base -- --profile focus'"
  },
  "devDependencies": {
    "@babel/register": "7.13.8",
    "@form8ion/babel-preset": "1.6.50",
    "@form8ion/commitlint-config": "1.0.16",
    "@form8ion/core": "1.4.2",
    "@form8ion/eslint-config": "1.7.8",
    "@form8ion/eslint-config-cucumber": "1.4.0",
    "@form8ion/eslint-config-mocha": "1.2.10",
    "@form8ion/remark-lint-preset": "1.0.12",
    "@travi/any": "2.0.16",
    "@travi/javascript-scaffolder": "12.2.1",
    "@travi/project-scaffolder": "9.0.5",
    "ban-sensitive-files": "1.9.15",
    "chai": "4.3.3",
    "codecov": "3.8.1",
    "cucumber": "6.0.5",
    "cz-conventional-changelog": "3.3.0",
    "gherkin-lint": "4.2.1",
    "husky": "5.1.3",
    "lockfile-lint": "4.6.2",
    "mocha": "8.3.1",
    "mock-fs": "4.13.0",
    "npm-run-all": "4.1.5",
    "nyc": "15.1.0",
    "package-preview": "3.0.0",
    "remark-cli": "9.0.0",
    "remark-toc": "7.2.0",
    "remark-usage": "9.0.0",
    "rimraf": "3.0.2",
    "rollup": "2.41.0",
    "rollup-plugin-auto-external": "2.0.0",
    "sinon": "9.2.4"
  },
  "dependencies": {
    "@form8ion/cucumber-scaffolder": "1.4.0",
    "deepmerge": "^4.2.2",
    "make-dir": "^3.1.0",
    "mustache": "^4.0.1"
  },
  "peerDependencies": {
    "@travi/javascript-scaffolder": "^11.13.0 || ^12.0.0"
  }
}
